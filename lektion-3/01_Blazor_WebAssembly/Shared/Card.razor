<div class="col">
    <div class="card">
        <div class="card-body">
        <h5 class="card-title">@Product.Name</h5>
        <p class="card-text">@Product.Description</p>
        </div>
        <div class="card-footer">
            @Product.Category/@Product.SubCategory
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Product Product { get; set; }
}